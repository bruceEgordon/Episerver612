@using EPiServer.Commerce.Catalog.ContentTypes
@model CommerceTraining.Models.ViewModels.DemoMarketsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Default Markets Demo</h2>
<p>Current Market Selected: @Model.SelectedMarket.MarketName</p>

@using (Html.BeginForm("ChangeDefaultMarket", "MarketsDemo"))
{
    @Html.DropDownListFor(m => m.SelectedMarket,
    new SelectList(Model.MarketList, "MarketId", "MarketName"), "-Please select a Market-",
    new { @onchange = "this.form.submit();"})
}

<h4>Shirt Details</h4>
@Html.PropertyFor(m => m.Shirt.Name)
@Model.Shirt.GetDefaultPrice().UnitPrice.ToString()