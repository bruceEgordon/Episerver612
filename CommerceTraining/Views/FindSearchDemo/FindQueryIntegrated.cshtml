@model CommerceTraining.Models.ViewModels.FindResultViewModel

@{
    ViewBag.Title = "FindQueryIntegrated";
}

<h2>Find Query Results</h2>

<p>You are looking for results for the text: @Model.SearchText</p>

<p>Total number of items in result: @Model.ResultCount</p>

<b>Results</b>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Margin</th>
            <th scope="col">Brand</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShirtVariants)
        {
            <tr>
                <th scope="row">@item.Name</th>
                <td>@item.Margin</td>
                <td>@item.Brand</td>
            </tr>
        }
    </tbody>
</table>

